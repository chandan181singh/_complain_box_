    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>

<body>
    <nav class="navbar bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/public/Aviskar.jfif" alt="Aviskar" id="login-img" width="30" height="24">
                COMPLAINT-BOX
            </a>
        </div>
    </nav>
    <br>
    <div id="complaint_box">
        <h1 id="complain"><u>
                <center><b>COMPLAINT BOX</b></center>
            </u></h1>
        <h2>
            <center>Register</center>
        </h2>
        <!-- make Post  request to register -->

        <div id="form">
            <% if(typeof message !=='undefined' ){ %> 

                <center>
                    <div style="width: 350px; border-radius: 20px;">
                        <h4 style="background-color: rgb(31, 213, 58); color:  white; font-weight: 700;">
                            <%= message %> !!!
                                <br>
                        </h4>
                    </div>
                </center>
                <% } %>
                    <form action="/register" method="post" enctype="multipart/form-data">
                        <label for="text">Name</label>
                        <center>
                            <input style="height: 30px;" type="text" name="name" placeholder="Enter name" required>
                        </center>
                        <label for="text">Email</label>
                        <center>
                            <input style="height: 30px;" type="text" name="email" placeholder="username" required>
                        </center>
                        <label for="text">Mobile No.</label>
                        <center>
                            <input style="height: 30px;" type="number" name="mbno" placeholder="mobile no.." required>
                        </center>
                        <label for="text">Profile pic</label>
                        <center>
                            <input style="height: 40px;" type="file" name="image" required>
                        </center>
                        <div style="margin-left: 60px; margin-right: 60px">
                        <select  name="profile" class="form-select" aria-label="Disabled select example">
                            <option selected>Choose Your profile type</option>
                            <option value="Electrician">Electrician</option>
                            <option value="Plumber">Plumber</option>
                            <option value="Residants">Residants</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                        <label for="text">Password</label>
                        <center>
                            <input style="height: 30px;" type="password" name="password" placeholder="password"
                                required>
                        </center>
                        <!-- <label for="text">Confirm Password</label>
                        <center>
                            <input style="height: 30px;" type="password" name="password2" placeholder="confirm password"
                                required>
                        </center> -->
                        <!-- <input class="button" type="submit" value="Register" > -->
                        <center>
                            <center><input style="height: 40px;background-color:blue; color:white;" type="submit" value="Register"></center>
                        </center>
                        <br>
                    </form>
        </div>
    </div>
<br><br>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
        integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
        crossorigin="anonymous"></script>
</body>

</html>
 

