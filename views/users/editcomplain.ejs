<body>
    <nav class="navbar bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/public/Aviskar.jfif" alt="Aviskar" id="login-img" width="30" height="24">
                COMPLAINT-BOX
            </a>
        </div>
    </nav>
    <center>
        <div id="profile">
            <form action="" method="POST" enctype="multipart/form-data">
                <div id="complaint_box">
                    <h1 id="complain"><u>
                            <center><b> Edit Your Complain</b></center>
                        </u></h1>
                    <br>
                    <div id="complain-form">
                        <select name="customcomplain" class="form-select" aria-label="Disabled select example">
                            <option selected>
                                <%= complain.customcomplain %>
                            </option>
                            <option value="Electricity Problem">Electricity Problem</option>
                            <option value="Water Problem">Water Problem</option>
                            <option value="Subsidy Problem">Subsidy Problem</option>
                            <option value="LPG gas related Problem">LPG gas related Problem</option>
                        </select>
                        <br>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label"><u>Write other Complain
                                    here</u></label>
                            <textarea name="complain" class="form-control" id="exampleFormControlTextarea1" rows="3"
                                placeholder="write here..."><%= complain.complain %></textarea>
                        </div>
                        <label style="font: size 1.2em; font-weight:700 " for="text"><u>Your uploaded pdf</u></label>

                        <iframe src="userpdfcomplain/<%= complain.pdf %>" frameborder="2px"></iframe>

                        <input style="height: 60px; width: 300px" type="file" name="pdf" value="<%= complain.pdf %>">
                        <input type="hidden" name="complain_id" value="<%= complain._id%>">
                        <br>
                            <center><input style="height: 40px;background-color:blue; color:white;" type="submit"
                                    value="Update Complain"></center>
                        </a>
                    </div>
                    <br>
                </div>
            </form>
    </center>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
        integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
        crossorigin="anonymous"></script>
</body>

</html>